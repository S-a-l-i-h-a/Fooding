        <activity
            android:name=".ScannerActivity"
            android:exported="false"
            android:parentActivityName=".Homescreen" />
        <activity
            android:name=".Homescreen"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:parentActivityName=".Homescreen" />
