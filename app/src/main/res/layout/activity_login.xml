<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:andorid="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginActivity"
    android:background="@drawable/rectangle"
    >


    <TextView
        android:id="@+id/textView"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginStart="97dp"
        android:layout_marginEnd="98dp"
        android:background="@drawable/rounded"
        android:text="Login"
        android:textAlignment="center"
        android:textStyle="bold"
        andorid:layout_constraintBottom_toBottomOf="parent"
        andorid:layout_constraintEnd_toEndOf="parent"
        andorid:layout_constraintStart_toStartOf="parent"
        andorid:layout_constraintTop_toTopOf="parent"
        andorid:layout_constraintVertical_bias="0.232" />

    <EditText
        android:id="@+id/username"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded"
        android:ems="10"
        android:hint="Enter Username"
        android:textAlignment="center"
        android:inputType="textPersonName"
        andorid:layout_constraintBottom_toTopOf="@+id/password"
        andorid:layout_constraintEnd_toEndOf="parent"
        andorid:layout_constraintHorizontal_bias="0.505"
        andorid:layout_constraintStart_toStartOf="parent"
        andorid:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/password"
        android:layout_width="317dp"
        android:layout_height="63dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/rounded"
        android:ems="10"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:textAlignment="center"
        andorid:layout_constraintBottom_toTopOf="@+id/login_button"
        andorid:layout_constraintEnd_toEndOf="parent"
        andorid:layout_constraintHorizontal_bias="0.504"
        andorid:layout_constraintStart_toStartOf="parent"
        andorid:layout_constraintTop_toBottomOf="@+id/username" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="250dp"
        android:text="Login"
        andorid:layout_constraintBottom_toBottomOf="parent"
        andorid:layout_constraintEnd_toEndOf="parent"
        andorid:layout_constraintStart_toStartOf="parent"
        andorid:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="166dp"
        android:layout_height="29dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/rounded"
        android:text="Don't have an account?"
        android:textAlignment="center"
        android:textStyle="bold"
        andorid:layout_constraintBottom_toTopOf="@+id/register_button2"
        andorid:layout_constraintEnd_toEndOf="parent"
        andorid:layout_constraintStart_toStartOf="parent"
        andorid:layout_constraintTop_toBottomOf="@+id/login_button"
        andorid:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/register_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="REGISTER"
        andorid:layout_constraintBottom_toBottomOf="parent"
        andorid:layout_constraintEnd_toEndOf="parent"
        andorid:layout_constraintHorizontal_bias="0.498"
        andorid:layout_constraintStart_toStartOf="parent"
        andorid:layout_constraintTop_toBottomOf="@+id/password"
        andorid:layout_constraintVertical_bias="0.17" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="193dp"
        android:layout_height="212dp"
        android:layout_marginBottom="19dp"
        andorid:layout_constraintBottom_toTopOf="@+id/username"
        andorid:layout_constraintEnd_toEndOf="parent"
        andorid:layout_constraintStart_toStartOf="parent"
        andorid:layout_constraintTop_toTopOf="parent"
        andorid:layout_constraintVertical_bias="0.113"
        andorid:srcCompat="@drawable/art"
        android:contentDescription="loginpicture" />

</androidx.constraintlayout.widget.ConstraintLayout>